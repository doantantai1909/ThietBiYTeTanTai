@using DoAnTotNghiep.Models
@model IEnumerable<TinTuc>
@{
    ViewBag.Title = "TinTuc";
    Layout = "~/Views/Layout/SanPhamLayout.cshtml";
}


    <div class="col-md-9 products-grid-right">
        <div class="special dv-dstintuc">
            <h3>Tin tức</h3>
            <div class="specia-top">
                <!--  -->
                @foreach (var item in Model)
                {

                    <div id="one-news">
                        <div id="news-img"><a href=" @Url.Action("ChiTietTinTuc", "Home", new {id = item.MaTinTuc })">
                            <img src=" @Url.Content("~/Content/images/" + item.HinhAnh)" alt=" @item.TieuDeTinTuc"></a>
                        </div>
                        <div id="news-view">
                            <div id="tieude_tintuc"><a href="   @Url.Action("ChiTietTinTuc", "Home", new {id = item.MaTinTuc })    "> @item.TieuDeTinTuc</a></div>
                            <div id="news-day">Ngày đăng: @item.NgayDang </div>
                            <div class="dv-mota-tintuc"> @item.NoiDungQuangCao    </div>
                        </div>
                        <div class="clear"> </div>
                    </div>

                }





                <!--  -->
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>



