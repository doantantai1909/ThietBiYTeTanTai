@using DoAnTotNghiep.Models;
@model IEnumerable<DichVu>


<script src="~/Content/js/jquery-1.8.2.min.js"></script>
<script src="~/Content/js/responsiveslides.min.js"></script>
<script>
    $(function () {
        $("#slider1").responsiveSlides({
            auto: true,
            nav: true,
            speed: 500,
            namespace: "callbacks",
            pager: true,
        });
    });
</script>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $(".scroll").click(function (event) {
            event.preventDefault();
            $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1200);
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $().UItoTop({ easingType: 'easeOutQuart' });
    });
</script>
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-6 banner-right">
                <div>
                    <br />
                    <br /> <br />
                    <p style="text-align:left; font-size: 20px">
                        <b>
                            <i>
                                Suốt toàn bộ đời sống của mình con người luôn luôn đòi hỏi được phòng ngừa bệnh tật
                                tối đa và đến khi mắc bệnh lại cần điều kiện chữa trị tốt nhất. Một chu trình phòng
                                chống bệnh tật cho con người cứ diễn ra liên tục suốt toàn bộ quá trình tồn tại của
                                con người. Chính vì vậy, nhu cầu về các dịch vụ y tế cho con người là vô cùng to lớn,
                                mỗi người đều muốn mình nhận được những dịch vụ y tế tốt nhất có thể có.

                            </i>
                        </b>
                    </p>

                </div>
            </div>
            <div class="col-md-6 banner-left">
                <div class="header-slider">
                    <div class="slider">
                        <div class="callbacks_container">
                            <ul class="rslides" id="slider1">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a href="@Url.Action("ChiTietDichVu", "Home", new {id = item.MaDichVu })">
                                            <img src="@Url.Content("~/Content/images/"+item.HinhAnh)" alt="mở rộng 1 - không xài" class="img-responsive">
                                        </a>
                                    </li>
                                }


                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
