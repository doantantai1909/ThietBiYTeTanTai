
@using DoAnTotNghiep.Models
@model PhieuNhap

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout2.cshtml";
}

@using (Html.BeginForm())
{
    <input name="MaPN" />
    <input name="MaNCC" />
    for (int i = 0; i < 10; i++)
    {

        <h2> Thông tin sản phẩm</h2>
        @*để MVC tự động trả dữ liệu model theo dạng list thì cách đặt tên như dưới đây*@
        <input name="@Url.Content("["+i+"].MaSP")" value="@i" />
        <br />
        <input name="@Url.Content("["+i+"].DonGiaNhap")" value="10000" />
        <br />
        <input name="@Url.Content("["+i+"].SoLuongNhap")" value="100" />
        <br />
    }
    <input type="submit" value="Đồng Ý" />
}

