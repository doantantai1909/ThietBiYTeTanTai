@model DoAnTotNghiep.Models.LoaiSanPham
@{
    ViewBag.Title = "XoaLSP";
    Layout = "~/Views/Layout/AdminLayout2.cshtml";
}

<h2>Xoá Loại Sản Phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("MaLoaiSP", Model.MaLoaiSP);


        <div class="form-group">

            <label>Tên Loại Sản Phẩm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Tên Gọi Khác (Bí Danh)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BiDanh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BiDanh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label> Hình Đại Diện (có thể không điền)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Icon, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xoá" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại!", "QuanLyLoaiSanPham")
</div>


