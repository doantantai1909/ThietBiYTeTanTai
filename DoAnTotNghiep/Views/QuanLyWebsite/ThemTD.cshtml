@model DoAnTotNghiep.Models.TuyenDung

@{
    ViewBag.Title = "ThemTD";
    Layout = "~/Views/Layout/AdminLayout2.cshtml";
}
@* Bước 1: sử dụng controldatetimepicker chèn javâ*@
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
@* sử dụng control editer tinymce*@
<script src="https://cdn.tiny.cloud/1/0eutz8fhwndtobnepv1o0mmgmijxkz66djywal8plxglxui9/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: "textarea",
        plugins: "a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker",
        toolbar: "a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table",
        toolbar_mode: "floating",
        tinycomments_mode: "embedded",
        tinycomments_author: "Author name"
    });
</script>

@*Bước 2: xây dựng 1 funtion để điều hướng html  theo dạng control datepicker*@
<script>
    $(function () {
        $(".col-lg-4").datepicker();
    });
</script>

<h2>Thêm Tin Tuyển Dụng Mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label>Tiêu Đề Tuyển Dụng</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TieuDeTuyenDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TieuDeTuyenDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Ngày Đăng</label> <div class="col-md-10">
            <input name="NgayDang" type="date" class="form-control form-control-user col-lg-4" />
        </div>
    </div>







    <div class="form-group row">
        <div class="col-sm-5 mb-5 mb-sm-0">
            <label>Số Điện Thoại</label>
            <input type="tel" required="" maxlength="10" class="form-control form-control-user" id="SDT" name="SDT">
        </div>
        <div class="col-sm-5">
            <label>Email</label>
            <input type="email" required="" class="form-control form-control-user" id="Email" name="Email">
        </div>
    </div>


    <div class="form-group">
        <label>Địa Chỉ</label> <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-lg-2">
        <label>Hình Ảnh</label>

        <input type="file" required="" class="form-control form-control-user " id="HinhAnh" name="HinhAnh" placeholder="">


    </div>
    <div class="form-group">
        <label>Nội Dung Tuyển Dụng</label> <div class="col-md-10">
            <textarea name="NoiDungTuyenDung" class="textarea">Nhập nội dung chi tiết của tin tuyển dụng</textarea>


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại!", "QuanLyTuyenDung")
</div>
