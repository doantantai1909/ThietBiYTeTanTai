@model DoAnTotNghiep.Models.NhaCungCap
@{
    ViewBag.Title = "ChinhSuaNCC";
    Layout = "~/Views/Layout/AdminLayout2.cshtml";
}

<h2>Cập Nhật Nhà Cung Cấp</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("MaNCC", Model.MaNCC);


    <div class="form-group">
        <label> Tên Nhà Cung Cấp</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Địa Chỉ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label> Email</label>
        <div class="col-md-10">
            <input type="email" required="Vui lòng điền Email" class="form-control form-control-user" id="Email" name="Email" value="@Model.Email">

        </div>
    </div>

    <div class="form-group">
        <label> Số Điện Thoại</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label> Fax</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập Nhật" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại!", "QuanLyNCC")
</div>

